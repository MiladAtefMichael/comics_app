<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo"
            android:id="@+id/about_back_icon"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="7"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/text1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:layout_gravity="top"
                    android:src="@drawable/ic_lightbulb_outline_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="7"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/text2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"

                        android:layout_gravity="top"
                        android:src="@drawable/face"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/link_page"
                android:layout_width="match_parent"
                android:layout_height="50dp"
               android:textSize="20dp"
                android:padding="10dp"
                android:textAlignment="center"

                android:background="@drawable/active_button"
                android:linksClickable="true"
                android:text="@string/txtCredits"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="developer"
            android:textColor="#2196F3"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eng. Milad Atef Michael"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us "

            android:textColor="#2196F3"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_weight="7"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="6"
                android:src="@drawable/ic_dock_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:text="01227883939"
                android:paddingTop="5dp"
                android:layout_weight="1"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginBottom="100dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="6"
                    android:src="@drawable/ic_email_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:text="milad.atef.2020@gmail.com"
                    android:paddingTop="5dp"
                    android:layout_weight="1"/>

            </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>